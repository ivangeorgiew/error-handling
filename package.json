{
    "name": "tied-up",
    "version": "1.0.0",
    "description": "Error-handling and other function utilities",
    "private": true,
    "main": "./dist/cjs/index.js",
    "module": "./dist/esm/index.js",
    "unpkg": "./dist/index.umd.js",
    "sideEffects": [
        "**/globalHandling.js"
    ],
    "exports": {
        ".": {
            "require": "./dist/cjs/index.js",
            "import": "./dist/esm/index.js",
            "umd": "./dist/index.umd.js"
        },
        "./extras": {
            "require": "./extras/dist/cjs/index.js",
            "import": "./extras/dist/esm/index.js",
            "umd": "./extras/dist/index.umd.js"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "dist",
        "extras/dist",
        "extras/package.json"
    ],
    "scripts": {
        "prepare": "husky install",
        "preinstall": "npx only-allow pnpm",
        "preversion": "pnpm i && pnpm build && git add -A",
        "postversion": "git push && pnpm publish",
        "clean": "rm -fr ./dist ./extras/dist",
        "build": "pnpm clean && rollup -c",
        "bump": "pnpm version patch",
        "bigbump": "pnpm version minor",
        "test": "NODE_ENV=dev node --expose-gc ./tests/index.js"
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "eslint --fix"
        ],
        "*.md": [
            "prettier --write"
        ]
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": false,
        "singleQuote": true,
        "quoteProps": "as-needed",
        "jsxSingleQuote": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "arrowParens": "avoid",
        "htmlWhitespaceSensitivity": "css",
        "proseWrap": "always",
        "endOfLine": "lf"
    },
    "eslintConfig": {
        "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module",
            "ecmaFeatures": {
                "impliedStrict": true
            }
        },
        "env": {
            "browser": true,
            "es2021": true,
            "node": true,
            "worker": true
        },
        "extends": [
            "eslint:recommended",
            "prettier"
        ]
    },
    "browserslist": [
        "defaults",
        "not IE 11",
        "maintained node versions"
    ],
    "keywords": [
        "exception",
        "error",
        "error-handling",
        "caching",
        "cache",
        "memoization",
        "memoize",
        "runtime",
        "validation"
    ],
    "author": "Ivan Georgiev <ivan_georgiew@yahoo.com>",
    "license": "MIT",
    "repository": "github:ivangeorgiew/tied-up",
    "bugs": "https://github.com/ivangeorgiew/tied-up/issues",
    "homepage": "https://github.com/ivangeorgiew/tied-up#readme",
    "devDependencies": {
        "@babel/core": "^7.14.6",
        "@babel/preset-env": "^7.14.7",
        "@rollup/plugin-babel": "^5.3.0",
        "eslint": "^7.30.0",
        "eslint-config-prettier": "^8.3.0",
        "husky": "^7.0.0",
        "lint-staged": "^11.0.1",
        "prettier": "^2.3.2",
        "rollup": "^2.53.2",
        "rollup-plugin-terser": "^7.0.2"
    }
}
