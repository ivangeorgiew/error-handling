{
    "name": "tied-pants",
    "version": "9.4.0",
    "description": "Error-handling and other function utilities",
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "exports": {
        "require": "dist/index.js",
        "import": "dist/index.esm.js"
    },
    "sideEffects": [
        "src/globalHandling.js"
    ],
    "files": [
        "dist"
    ],
    "scripts": {
        "prepare": "husky install",
        "preinstall": "npx only-allow pnpm",
        "preversion": "pnpm i && pnpm build && git add -A",
        "postversion": "git push && pnpm publish",
        "build": "rm -fr dist && rollup -c",
        "bump": "pnpm version patch"
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "eslint --fix"
        ],
        "*.md": [
            "prettier --write"
        ]
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": false,
        "singleQuote": true,
        "quoteProps": "as-needed",
        "jsxSingleQuote": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "arrowParens": "avoid",
        "htmlWhitespaceSensitivity": "css",
        "proseWrap": "always",
        "endOfLine": "lf"
    },
    "eslintIgnore": [
        "node_modules",
        "dist"
    ],
    "eslintConfig": {
        "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module",
            "ecmaFeatures": {
                "impliedStrict": true
            }
        },
        "env": {
            "browser": true,
            "es2021": true,
            "node": true,
            "worker": true
        },
        "extends": [
            "eslint:recommended",
            "prettier"
        ]
    },
    "browserslist": [
        "defaults",
        "not IE 11",
        "maintained node versions"
    ],
    "keywords": [
        "exception",
        "error",
        "error-handling",
        "caching",
        "cache",
        "memoization",
        "memoize",
        "runtime",
        "validation"
    ],
    "author": "Ivan Georgiev <ivan_georgiew@yahoo.com>",
    "license": "MIT",
    "repository": "ivangeorgiew/tied-pants",
    "bugs": "https://github.com/ivangeorgiew/tied-pants/issues",
    "homepage": "https://github.com/ivangeorgiew/tied-pants#readme",
    "devDependencies": {
        "@babel/core": "^7.14.6",
        "@babel/preset-env": "^7.14.7",
        "@rollup/plugin-babel": "^5.3.0",
        "eslint": "^7.30.0",
        "eslint-config-prettier": "^8.3.0",
        "husky": "^7.0.0",
        "lint-staged": "^11.0.1",
        "prettier": "^2.3.2",
        "rollup": "^2.53.2",
        "rollup-plugin-terser": "^7.0.2"
    }
}
