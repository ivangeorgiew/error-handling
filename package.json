{
    "name": "tied-pants",
    "version": "8.0.0",
    "description": "Utilities for error handling",
    "main": "cjs/index.js",
    "private": false,
    "sideEffects": false,
    "keywords": [
        "exception",
        "error",
        "handling",
        "error-handling",
        "logging",
        "caching",
        "cache",
        "memoization",
        "memoize"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ivangeorgiew/tied-pants.git"
    },
    "author": "Ivan Georgiev <ivan_georgiew@yahoo.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ivangeorgiew/tied-pants/issues"
    },
    "homepage": "https://github.com/ivangeorgiew/tied-pants#readme",
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "build": "rollup -c",
        "preversion": "pnpm i && pnpm run build && git add -A",
        "postversion": "git push && pnpm publish"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "modules": false,
                    "targets": "defaults, not IE 11, not IE_Mob 11, maintained node versions"
                }
            ]
        ]
    },
    "devDependencies": {
        "@babel/core": "^7.11.6",
        "@babel/preset-env": "^7.11.5",
        "@rollup/plugin-babel": "^5.2.1",
        "@rollup/plugin-node-resolve": "^9.0.0",
        "rollup": "^2.26.11",
        "rollup-plugin-terser": "^7.0.2",
        "terser": "^5.2.1"
    }
}
