{
    "name": "tied-up",
    "version": "1.0.0",
    "description": "Error-handling and other function utilities",
    "private": true,
    "main": "dist/index.cjs.js",
    "module": "dist/index.esm.js",
    "unpkg": "dist/index.umd.js",
    "browser": "dist/index.browser.js",
    "sideEffects": false,
    "exports": {
        ".": {
            "require": "./dist/index.cjs.js",
            "import": "./dist/index.esm.js",
            "umd": "./dist/index.umd.js",
            "browser": "./dist/index.browser.js"
        },
        "./server": {
            "require": "./server/dist/index.cjs.js",
            "import": "./server/dist/index.esm.js",
            "umd": "./server/dist/index.umd.js",
            "browser": "./server/dist/index.browser.js"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "src",
        "dist",
        "server/src",
        "server/dist",
        "server/package.json"
    ],
    "scripts": {
        "prepare": "husky install",
        "preinstall": "npx only-allow pnpm",
        "preversion": "pnpm i && pnpm lint && pnpm build && git add -A",
        "postversion": "git push && pnpm publish",
        "clean": "rm -fr ./dist ./server/dist",
        "build": "pnpm clean && rollup -c",
        "bump": "pnpm version patch",
        "bigbump": "pnpm version minor",
        "test": "NODE_ENV=dev node ./tests/index.js",
        "lint:prettier": "prettier --write --loglevel warn \"{src,server/src}/**/*.js\"",
        "lint:eslint": "eslint \"{src,server/src}/**/*.js\"",
        "lint": "pnpm lint:prettier && pnpm lint:eslint"
    },
    "prettier": {
        "printWidth": 85,
        "tabWidth": 4,
        "useTabs": false,
        "semi": false,
        "singleQuote": true,
        "quoteProps": "as-needed",
        "jsxSingleQuote": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "arrowParens": "avoid",
        "htmlWhitespaceSensitivity": "css",
        "proseWrap": "always",
        "endOfLine": "lf"
    },
    "eslintConfig": {
        "parserOptions": {
            "ecmaVersion": 2021,
            "sourceType": "module",
            "ecmaFeatures": {
                "impliedStrict": true
            }
        },
        "env": {
            "browser": true,
            "es2021": true,
            "node": true,
            "worker": true
        },
        "extends": [
            "eslint:recommended",
            "prettier",
            "plugin:compat/recommended",
            "plugin:ecmalist/recommended"
        ],
        "settings": {
            "es": {
                "aggressive": true
            }
        },
        "rules": {
            "ecmalist/no-modules": "off",
            "default-param-last": "error",
            "no-unused-vars": [
                "error",
                {
                    "args": "none"
                }
            ]
        }
    },
    "browserslist": [
        "defaults",
        "maintained node versions",
        "not IE 11"
    ],
    "engines": {
        "node": ">=12.22.0"
    },
    "keywords": [],
    "author": "Ivan Georgiev <ivan_georgiew@yahoo.com>",
    "license": "MIT",
    "repository": "github:ivangeorgiew/tied-up",
    "bugs": "https://github.com/ivangeorgiew/tied-up/issues",
    "homepage": "https://github.com/ivangeorgiew/tied-up#readme",
    "devDependencies": {
        "@rollup/plugin-replace": "^3.0.0",
        "@rollup/plugin-strip": "^2.1.0",
        "eslint": "^7.30.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-compat": "^3.13.0",
        "eslint-plugin-ecmalist": "^1.0.2",
        "husky": "^7.0.0",
        "prettier": "^2.3.2",
        "rollup": "^2.56.0",
        "rollup-plugin-terser": "^7.0.2"
    }
}
